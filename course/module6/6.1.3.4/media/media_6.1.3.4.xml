<component id="ID_s1_txt01">
<text><![CDATA[<b>IPv4 Header Functions</b>]]></text>
</component>

<component id="ID_s1_txt02">
<text><![CDATA[<b>IPv4 Header Fields</b>]]></text>
</component>

<component id="ID_s1_field01">
<text><![CDATA[<b>Version</b>]]></text>
</component>

<component id="ID_s1_field02">
<text><![CDATA[<b>Differentiated Services</b>]]></text>
</component>

<component id="ID_s1_field03">
<text><![CDATA[<b>Time-to-Live</b>]]></text>
</component>

<component id="ID_s1_field04">
<text><![CDATA[<b>Protocol</b>]]></text>
</component>

<component id="ID_s1_field05">
<text><![CDATA[<b>Source IP Address</b>]]></text>
</component>

<component id="ID_s1_field06">
<text><![CDATA[<b>Destination IP Address</b>]]></text>
</component>

<!--answers-->
<component id="ID_s1_ans01">
<text><![CDATA[Always set to 0100 for IPv4]]></text>
</component>

<component id="ID_s1_ans02">
<text><![CDATA[Identifies the priority of each packet]]></text>
</component>

<component id="ID_s1_ans03">
<text><![CDATA[Commonly referred to as hop count]]></text>
</component>

<component id="ID_s1_ans04">
<text><![CDATA[Identifies the upper-layer protocol to be used next]]></text>
</component>

<component id="ID_s1_ans05">
<text><![CDATA[Identifies the IP address of the sending host]]></text>
</component>

<component id="ID_s1_ans06">
<text><![CDATA[Identifies the IP address of the recipient host]]></text>
</component>

