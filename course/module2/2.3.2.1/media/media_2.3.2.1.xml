<textcomponents>
	<component id="ID_title">
		<text><![CDATA[<b>Configuring a Switch Virtual Interface</b>]]></text>
	</component>
	<component id="ID_SC5" fontFace='Courier New' fontSize="10">
		<text></text>		
		<feedback id="fb"><![CDATA[<span><font size = '10' face="Arial"><span><b>***</b></span>You must enter the exact and full command. Commands that include a name or password are case-sensitive.<span><b>***</b></span></font></span>
		]]></feedback>		
		<existingcommands><![CDATA[<font size = '10' face="Arial"><b>Enter interface configuration mode for VLAN 1.</b></font>]]></existingcommands>
		<command prompt="Switch(config)#" id="cmd1" node="start">
		    <correctresponse id="cr1" ignoreCase = 'true'><![CDATA[interface vlan 1]]></correctresponse>
		    <deviceresponse id="dr1"><![CDATA[<span></span>]]></deviceresponse> 
			<instruction id="ins1"><![CDATA[<font size = '10' face="Arial"><b>Configure the IP address as '192.168.10.2' and the subnet mask as '255.255.255.0'.</b></font>]]></instruction> 			
		</command>
		<command prompt="Switch(config-if)#" id="cmd2">
			<correctresponse id="cr2" ignoreCase = 'true'><![CDATA[ip address 192.168.10.2 255.255.255.0]]></correctresponse>
			<deviceresponse id="dr2"><![CDATA[<span></span>]]></deviceresponse> 
		    <instruction id="ins2"><![CDATA[<font size = '10' face="Arial"><b>Activate the interface.</b></font>]]></instruction> 
		</command>
		<command prompt="Switch(config-if)#" id="cmd3" node="end">
			<correctresponse id="cr3" ignoreCase = 'true'><![CDATA[no shutdown]]></correctresponse>
			<deviceresponse id="dr3"><![CDATA[%LINK-5-CHANGED: Interface Vlan1, changed state to up<br><br>Switch(config-if)#]]></deviceresponse>
		    <instruction id="last"><![CDATA[<font size = '10' face="Arial"><b>You successfully configured the VLAN 1 interface.</b></font>]]></instruction> 
		</command>
		<command prompt=""/>
	</component>
</textcomponents> 